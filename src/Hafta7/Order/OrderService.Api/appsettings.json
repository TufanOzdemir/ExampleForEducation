{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "file": {
        "type": "File",
        "fileName": "logs/app.json",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "time",
              "layout": "${longdate}"
            },
            {
              "name": "level",
              "layout": "${level}"
            },
            {
              "name": "message",
              "layout": "${message}"
            },
            {
              "name": "exception",
              "layout": "${exception:format=ToString}"
            }
          ]
        }
      },
      "consoleLog": {
        "type": "Console",
        "layout": "${longdate} | ${level:uppercase=true} | ${message} | ${exception}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "consoleLog"
      }
    ]
  },
  "Jwt": {
    "Secret": "bu_cok_gizli_ve_uzun_bir_anahtar_olmalidir_256bit",
    "Issuer": "https://mysapi.com",
    "Audience": "https://myapp.com"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "guest",
    "Password": "guest"
  }
}
